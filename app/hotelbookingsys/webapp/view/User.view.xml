<mvc:View
    controllerName="hotelbooking.hotelbookingsys.controller.User"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="USER VIEW"
    >
        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="BOOK HOTEL"
            press="onBookHotel"
        >
            <TileContent>
                <ImageContent src="sap-icon://add-coursebook" />
            </TileContent>
        </GenericTile>
        <GenericTile
            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
            header="BOOKING HISTORY"
            press="onBookingHistory"
        >
            <TileContent>
                <ImageContent src="sap-icon://customer-history" />
            </TileContent>
        </GenericTile>
    </Page>
</mvc:View>
